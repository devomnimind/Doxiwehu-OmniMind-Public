[Unit]
Description=OmniMind Benchmark Suite
After=network.target omnimind.service omnimind-qdrant.service
Requires=omnimind.service omnimind-qdrant.service

[Service]
Type=simple
User=fahbrain
WorkingDirectory=/home/fahbrain/projects/omnimind
Environment=PATH=/home/fahbrain/projects/omnimind/.venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment=PYTHONPATH=/home/fahbrain/projects/omnimind
ExecStartPre=/bin/bash -c 'source /home/fahbrain/projects/omnimind/.venv/bin/activate && mkdir -p /home/fahbrain/projects/omnimind/data/benchmarks'
ExecStart=/home/fahbrain/projects/omnimind/.venv/bin/python scripts/benchmarks/benchmark_phase21.py
Restart=no
StandardOutput=journal
StandardError=journal
SyslogIdentifier=omnimind-benchmark

[Install]
WantedBy=multi-user.target