# Flake8 Configuration for OmniMind

[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific errors
ignore =
    # E402: module level import not at top of file
    # Reason: Some scripts need sys.path.append before imports
    E402,
    # F541: f-string is missing placeholders
    # Reason: Some log messages use f-strings for consistency
    F541,
    # W503: line break before binary operator
    W503,
    # E203: whitespace before ':'
    E203

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    zombie,
    data,
    logs,
    .gemini

# Per-file ignores
per-file-ignores =
    # Training scripts need sys.path.append before imports
    scripts/sovereign_rebirth_final.py:E402
    src/sovereignty/train_sovereign_model.py:E402,F541
    # Init files can have unused imports
    __init__.py:F401
